<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NotesApp" parent="Theme.MaterialComponents.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_gray</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="floatingActionButtonStyle">@style/FabStyle</item>
        <item name="android:windowLightStatusBar">true</item>

        <item name="android:actionBarStyle">@style/ActionBarStyle</item>
        <item name="android:background">@color/white</item>
        <item name="android:colorBackground">@color/white</item>
    </style>

    <style name="FabStyle" parent="Widget.Design.FloatingActionButton">
        <item name="shapeAppearanceOverlay">@style/FabCornerRadius</item>
    </style>

    <style name="FabCornerRadius" parent="FabStyle">
        <item name="cornerSize">30%</item>
    </style>

    <style name="ActionBarStyle" parent="android:Widget.ActionBar">
        <item name="background">@color/white</item>
    </style>

    <style name="NoActionBar" parent="Theme.NotesApp">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SplashScreen" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/bg_splash_screen</item>
        <item name="android:statusBarColor">@color/white</item>
    </style>
</resources>